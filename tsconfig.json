{
  "compilerOptions": {
    "sourceMap": false,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
}